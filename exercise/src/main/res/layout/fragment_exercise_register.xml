<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_rounded"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.bottomsheet.ExerciseRegisterFragment">

    <View
        android:id="@+id/drag_indicator"
        android:layout_width="@dimen/width_drag_indicator"
        android:layout_height="@dimen/height_drag_indicator"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/drag_indicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Close button -->
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_view_big"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/loaderButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_close_main_color" />

    <br.com.mygym.uitoolkit.button.LoaderButton
        android:id="@+id/loaderButton"
        style="@style/MyGym.Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_custom_button"
        android:layout_marginStart="@dimen/space_view_medium"
        android:layout_marginEnd="@dimen/space_view_medium"
        android:layout_marginBottom="@dimen/space_view_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:uitoolkit_style="normal"
        app:uitoolkit_title="@string/confirm" />

</androidx.constraintlayout.widget.ConstraintLayout>