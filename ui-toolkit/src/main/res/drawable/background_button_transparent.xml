<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/ripple_light">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_button" />
            <stroke android:width="1dp" android:color="@color/base_50" />
            <solid android:color="@color/base_5" />
        </shape>
    </item>
    <item>
        <ripple android:color="@color/ripple_blue">
            <item android:id="@+id/background">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/radius_button" />
                </shape>
            </item>
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/radius_button" />
                    <solid android:color="@color/main_color" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>
